<?php


/* --------------------------------------------------------------------------*/
/**
* @tianxiaolong  
* is_scalar() 判断是不是一个标量，（int, string, float 均为标量，array, object
* 不是标量）
* @Param $var
*
* @Returns   
 */
/* ----------------------------------------------------------------------------*/
function show_var ($var)
{
	if (is_scalar($var)) {
		echo $var;
	} else {
		var_dump($var);
	}
}
$pi = 3.14159267;
$aa = [1, 2, 3, 4];
show_var($pi);
show_var($aa);
